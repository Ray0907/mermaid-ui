{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "mermaidui-core": ["packages/core/src"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "composite": true, // Enable project references
    "declarationMap": true, // Optional: improves Go to Definition in editors
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
